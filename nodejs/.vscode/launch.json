{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "program": "${workspaceFolder}/src/",
          "cwd": "${workspaceFolder}"
      },
      {
          "type": "node",
          "request": "attach",
          "name": "Attach to Process",
          "port": 5858
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run mocha",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": ["src/**/*.spec.js"],
        "cwd": "${workspaceFolder}"
      }
  ]
}
